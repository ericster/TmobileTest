                <corners android:radius="@dimen/card_item_special_applications_card_progressbar_radius" />
                <gradient android:startColor="@color/brand_magenta" android:endColor="@color/brand_magenta" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/brand_magenta" />
